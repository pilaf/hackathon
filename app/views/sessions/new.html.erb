<div id="auth-content">
	<h1>Sign In</h1>
	<%= form_tag sessions_path, class: "login" do %>
		<% if flash[:error] %>
			<span class="field-error login"><%= flash[:error] %></span>
		<% end %>
		<div class="field">
			<%= text_field_tag :username, "", class: "edit", placeholder: "Username" %>
		</div>
		<div class="field">
			<%= password_field_tag :password, "", class: "edit", placeholder: "Password" %>
		</div>
		<div class="clearfix"></div>
		<div class="actions">
			<%= submit_tag "Sign In", class: 'btn flat' %>
			<%= link_to "Back to home", :root, class: "btn flat green" %>
		</div>
	<% end %>
</div>
